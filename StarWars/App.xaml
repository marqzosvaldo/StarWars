<?xml version="1.0" encoding="utf-8"?>
<Application
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:d="http://xamarin.com/schemas/2014/forms/design"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    x:Class="StarWars.App">
    <Application.Resources>
        <ResourceDictionary>
            <!--Fonts-->
            <OnPlatform
                x:Key="Starjedi"
                x:TypeArguments="x:String">
                <On
                    Platform="Android"
                    Value="Fonts/Strjmono.ttf#Starjedi" />
                <On
                    Platform="iOS"
                    Value="Star Jedi" />
            </OnPlatform>
             <OnPlatform
                x:Key="StarjediMono"
                x:TypeArguments="x:String">
                <On
                    Platform="Android"
                    Value="Fonts/Strjmono.ttf#StarjediMono" />
                <On
                    Platform="iOS"
                    Value="Star Jedi" />
            </OnPlatform>
        </ResourceDictionary>
    </Application.Resources>
</Application>